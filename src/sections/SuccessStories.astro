---
import PortableText from "@/components/atoms/PortableText.astro";
import Container from "@/components/global/Container.astro";
const { section } = Astro.props;
const {title, description, testimonials, ctaText,variation} = section
---

<section class="bg-blue-200">
    <Container>
        <h2><PortableText portableText={title} /></h2>
        <div><PortableText portableText={description} /></div>

        {testimonials && testimonials.map((testimonial)=>{
            return <div>{testimonial.name}</div>
        })}
        {ctaText && <div><PortableText portableText={ctaText} /></div>}
    </Container>
</section>