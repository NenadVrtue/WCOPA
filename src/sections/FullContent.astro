---
import Container from "@/components/global/Container.astro";
import PortableText from "@/components/atoms/PortableText.astro";
import PortableTextTitle from "@/components/atoms/PortableTextTitle.astro";
const { section } = Astro.props;
const { title, description, content } = section;
---

<section class="mt-20">
    <Container classes="prose prose-xl">
        <h1 class="">
            <PortableTextTitle portableText={title} />
        </h1>
        <p class=""><PortableText portableText={description} /></p>
        <div class="mt-10">
            <PortableText portableText={content} />
        </div>
    </Container>
</section>
